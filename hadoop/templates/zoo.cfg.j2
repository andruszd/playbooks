# {{ zookeeper_version }} Configuration
standaloneEnabled=false
reconfigEnabled=true
skipACL=yes
tickTime=2000
initLimit=10
syncLimit=5
maxClientCnxns=60
autopurge.snapRetainCount=3
autopurge.purgeInterval=1
snapCount=3000000
preAllocSize=131072
commitLogCount=50
audit.enable=true
4lw.commands.whitelist=*

dataDir={{ zookeeper_data_dir }}
dataLogDir={{ zookeeper_data_log_dir }}


{% for item in zookeepers %}
server.{{item.myid}}={{ item.ip }}:2888:3888:participant;0.0.0.0:2181
{% endfor %}