<!-- Put site-specific property overrides in this file. -->


<configuration>
<!-- Start Mapred Properties -->
	<property>
  		<name>mapreduce.jobhistory.admin.acl</name>
  		<value>mapred hadoop-admins</value>
	</property>
<!--Execution framework set to Hadoop YARN.-->
	<property>
		<name>mapreduce.framework.name</name>
		<value>yarn</value>
	</property>
<!--Larger resource limit for maps.-->
	<property>
		<name>mapreduce.map.memory.mb</name>
		<value>1536</value>
	</property>
<!--Larger resource limit for reduces.-->
	<property>
		<name>mapreduce.reduce.memory.mb</name>
		<value>3072</value>
	</property>
<!--Higher memory-limit while sorting data for efficiency.-->
	<property>
		<name>mapreduce.task.io.sort.mb</name>
		<value>512</value>
	</property>
<!--More streams merged at once while sorting files.-->
	<property>
		<name>mapreduce.task.io.sort.factor</name>
		<value>100</value>
	</property>
<!--Higher number of parallel copies run by reduces to fetch outputs from very large number of maps.-->
	<property>
		<name>mapreduce.reduce.shuffle.parallelcopies</name>
		<value>50</value>
	</property>
	<property>
		<name>mapred.tasktracker.map.tasks.maximum</name>
		<value>6</value>
	</property>
	<property>
		<name>mapred.tasktracker.reduce.tasks.maximum</name>
		<value>6</value>
	</property>
<!--Larger heap-size for child jvms of reduces.-->
	<property>
		<name>rmapreduce.reduce.java.opts?</name>
		<value>-Xmx2560M</value>
	</property>
<!--Larger heap-size for child jvms of maps.-->
	<property>
		<name>mapreduce.map.java.opts</name>
		<value>-Xmx1024M</value>
	</property>
	<property>
		<name>mapred.map.child.java.opts</name>
		<value>-Xmx512m</value>
	</property>
	<property>
		<name>mapred.reduce.child.java.opts</name>
		<value>-Xmx512m</value>
	</property>
	<property>
    	<name>yarn.app.mapreduce.am.staging-dir</name>
    	<value>/user</value>
	</property>
  	<property>
    	<name>mapreduce.jobhistory.address</name>
    	<value>{{location}}-{{sys_env}}-hdfsdn03.{{domain_name}}10020</value>
	</property>
	<property>
		<name>mapreduce.jobhistory.webapp.address</name>
		<value>{{location}}-{{sys_env}}-hdfsdn03.{{domain_name}}19888</value>
	</property>
	<property>
     	<name>mapreduce.jobhistory.intermediate-done-dir</name>
     	<value>${yarn.app.mapreduce.am.staging-dir}/history/done</value>
	</property>
	<property>
    	 <name>mapreduce.jobhistory.done-dir</name>
     	<value>${yarn.app.mapreduce.am.staging-dir}/history/done_intermediate</value>
	</property>
<!-- END Mapred Properties -->
</configuration>