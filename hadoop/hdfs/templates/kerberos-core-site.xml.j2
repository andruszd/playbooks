     <property> 
          <name>hadoop.security.authentication</name> 
          <value>kerberos</value>
     </property>
     <property>
          <name>hadoop.security.authorization</name>
          <value>true</value>
     </property>
     <property>
          <name>hadoop.security.auth_to_local</name>
          <value>
             RULE:[2:$1/@$0]([ndj]n/.*@REPLACEME) s/.*/hdfs/
             RULE:[2:$1/@$0]([rn]m/.*@REPLACEME) s/.*/yarn/
             RULE:[2:$1/@$0](jhs/.*@REPLACEME) s/.*/mapred/
             [2:$1]
             DEFAULT
          </value>
     </property>
     <property>
          <name>hadoop.rpc.protection</name>
          <value>privacy</value>
     </property> 
<!-- END Kerberos Properties -->